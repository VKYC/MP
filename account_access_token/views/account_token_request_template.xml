<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="account_token_request_template" name="Account Token Request Form">
        <form action="/validate_token" method="post">
            <div>
                <label for="token">Token:</label>
                <input type="text" id="token_id" name="Token" required="true"/>
            </div>
            <div>
                <button type="submit">Submit</button>
            </div>
            <t t-if="error">
                <div>
                    <p t-esc="error"/>
                </div>
            </t>
        </form>
    </template>
</odoo>