<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="token_request_form" name="Token Request Form">
        <form action="/validate_token" method="post">
            <div>
                <label for="token">Token:</label>
                <input type="text" id="token" name="token"/>
            </div>
            <div>
                <button type="submit">Submit</button>
            </div>
            <t t-if="error">
                <div>
                    <p t-esc="error"/>
                </div>
            </t>
        </form>
    </template>
</odoo>